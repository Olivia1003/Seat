/* common */
.orderItem-wrap {
  position: relative;
  display: flex;
  flex-direction: column;
  padding: 10rpx 30rpx;
  /* background-color: #EEF1F6; */
  background-color: rgb(250, 250, 250);
  height: 200rpx;
  margin: 35rpx 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 -1px 1px #eee,
    0 3px 10px #eee,
    -3px 0 10px #eee,
    3px 0 10px #eee;
}



/* top-line */
.top-line {
  line-height: 60rpx;
}

.id-txt {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #777;
}

.school-txt {
  font-size: 30rpx;
  color: #777;
}

/* address-line */
.address-line {
  line-height: 60rpx;
}

.floor-txt {
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #333333;
}

.seat-txt {
  font-size: 36rpx;
  color: #333333;
}

.address-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

/* time-line */
.time-line {
  display: flex;
  align-items: center;
  line-height: 60rpx;
}

.date-txt {
  font-size: 30rpx;
  color: #333333;
  margin-right: 20rpx;
}

.time-txt {
  font-size: 36rpx;
  color: #333333;
  /* color: #3D9970; */
}

.time-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 10rpx;
}

/* status */
.status-wrap {
  position: absolute;
  top: 15rpx;
  right: 25rpx;
  /* width: 250rpx; */
}

.status-txt-current {
  font-size: 30rpx;
  color: #3D9970;
  /* white-space: nowrap; */
}

.status-txt-past {
  font-size: 30rpx;
  color: #555555;
  /* white-space: nowrap; */
}