<view>
    <view class="book-select-page-container">
        <view class="select-line">
            <picker
                mode="selector"
                bindchange="selectSchoolHandle"
                value="{{schoolList.length>0?schoolList[selectSchoolIndex]:'empty'}}"
                range="{{schoolList}}"
            >
                <view class="select-line-inner">
                    <image
                        src="../../images/iconsSelector/school.png"
                        class="select-icon"
                    />
                    <view>选择学校：{{schoolList.length>0?schoolList[selectSchoolIndex]:'empty'}}</view>
                </view>
            </picker>
        </view>
        <view class="select-line">
            <picker
                mode="selector"
                bindchange="selectFloorHandle"
                value="{{floorList.length>0?floorList[selectFloorIndex]:'empty'}}"
                range="{{floorList}}"
            >
                <view class="select-line-inner">
                    <image
                        src="../../images/iconsSelector/floor.png"
                        class="select-icon"
                    />
                    <view>选择楼层：{{floorList.length>0?floorList[selectFloorIndex]:'empty'}}</view>
                </view>
            </picker>
        </view>
        <view class="select-line">
            <picker
                mode="date"
                bindchange="selectDateHandle"
                value="{{selectDate}}"
                start="2017-09-01"
                end="2019-09-01"
            >
                <view class="select-line-inner">
                    <image
                        src="../../images/iconsSelector/date.png"
                        class="select-icon"
                    />
                    <view>选择日期：{{selectDate}}</view>
                </view>
            </picker>
        </view>
        <button
            bindtap="comfirmSelect"
            class="confirm-btn"
        >
            submit
        </button>
    </view>
</view>
