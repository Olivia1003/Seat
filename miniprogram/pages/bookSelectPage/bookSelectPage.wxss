.book-select-page-container {
    padding: 5rpx;
    background-color: #EEF1F6;
}

.select-block {
    background-color: #ffffff;
    margin: 30rpx 20rpx;
    padding: 10rpx 25rpx;
    border-radius: 12rpx;
    box-shadow: 0 -1px 1px #dddddd,
        0 3px 10px #dddddd,
        -3px 0 10px #dddddd,
        3px 0 10px #dddddd;
}

/* select line */
.select-line {
    margin: 20rpx 0;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.select-line-inner {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.select-icon {
    width: 38rpx;
    height: 38rpx;
    margin-right: 18rpx;
}

.start-time-wrap {
    display: flex;
    flex-direction: row;
    align-items: center;
}

.end-time-wrap {
    display: flex;
    flex-direction: row;
    margin-left: 56rpx;
    margin-top: 20rpx;
    margin-bottom: 15rpx;
}

.time-partition {
    margin: 0 10rpx;
}

/* confirm btn */
.confirm-btn {
    margin: 90rpx 20rpx;
    /* width: 60%; */
    height: 80rpx;
    letter-spacing: 30rpx;
    line-height: 80rpx;
    border: none;
    border-radius: 20rpx;
    background-color: #37BC9B;
    color: #ffffff;
}