<view>
    <!-- 基本信息 -->
    <view class="top-banner">
        <open-data
            type="userAvatarUrl"
            class="user-pic"
        ></open-data>
        <view class="user-right-block">
            <open-data
                type="userNickName"
                class="user-name"
            ></open-data>
            <view class="user-school">
                <text>{{userData.school}}</text>
            </view>
        </view>

        <button
            wx:if="{{canIUse}}"
            open-type="getUserInfo"
            bindgetuserinfo="bindGetUserInfo"
        >授权登录</button>
        <view wx:else>请升级微信版本</view>
    </view>
    <!-- 其他信息 -->
    <view class="user-block-wrap">
        <lineItem
            title="积分"
            iconUrl="../../images/iconsUser/edit.png"
            info="{{userData.point+'分'}}"
        />
        <view class="full-line"></view>
        <lineItem
            title="信用等级"
            iconUrl="../../images/iconsUser/edit.png"
            info="{{userData.rank+'级'}}"
        />
        <view class="full-line"></view>
        <lineItem
            title="累计学习"
            iconUrl="../../images/iconsUser/edit.png"
            info="{{userData.hour+'小时'}}"
        />
        <view class="full-line"></view>
        <lineItem
            title="短期暂离（20min）"
            iconUrl="../../images/iconsUser/edit.png"
            info="{{'本月剩余'+userData.leaveShort+'次'}}"
        />
        <view class="full-line"></view>
        <lineItem
            title="长期暂离（60min）"
            iconUrl="../../images/iconsUser/edit.png"
            info="{{'本月剩余'+userData.leaveLong+'次'}}"
        />
        <view class="full-line"></view>
        <lineItem
            title="设置"
            iconUrl="../../images/iconsUser/edit.png"
            info=""
        />
        <view class="full-line"></view>

    </view>
</view>