.home-page-container {
  padding: 60rpx 50rpx;
}

/* top-bar */
.top-btn-bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  /* width: 750rpx; */
}

.book-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  height: 100rpx;
  width: 280rpx;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 -3rpx 30rpx #eeeeee,
    0 3rpx 30rpx #eeeeee,
    -3rpx 0 30rpx #eeeeee,
    3rpx 0 30rpx #eeeeee;
  border: none;
}

.book-btn-txt {
  font-size: 30rpx;
  color: #555;
  letter-spacing: 2rpx;
}

.book-btn-icon {
  width: 35rpx;
  height: 35rpx;
  margin-right: 15rpx;
}

/* my-seat */
.my-seat-wrap {
  margin-top: 50rpx;
}

.my-seat-title {
  font-size: 35rpx;
}

.my-seat-empty-txt {
  color: #777777;
  font-size: 30rpx;
}

/* bottom-bar */
.bottom-bar {
  margin-top: 30rpx;
}

.bottom-bar-title {
  font-size: 35rpx;
}

.bottom-item-list {
  display: flex;
  flex-direction: row;
}

.bottom-item {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
}

.bottom-item-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.bottom-item-title {
  font-size: 30rpx;
}